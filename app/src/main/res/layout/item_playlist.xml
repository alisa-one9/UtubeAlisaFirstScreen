<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_playlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/load_image"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CC1B1919"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_alignParentBottom="true"
                android:text="@string/playlist"
                android:textColor="@color/white"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_playlistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="26dp"
        android:text="mnmnmnmn"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/cv_image"
        android:fontFamily="@font/fjalla_one"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:layout_below="@+id/tv_playlistTitle"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/cv_image"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_playlist_video_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="twenty"
        android:textSize="10dp"
        android:layout_below="@id/tv_desc"
        android:layout_toEndOf="@id/cv_image"
               android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/video_series"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="71dp"
        android:layout_toEndOf="@id/tv_playlist_video_counter"
        android:text="@string/video_series"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>